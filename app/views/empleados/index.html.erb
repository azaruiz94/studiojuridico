<div class="box box-primary">
  <div class="box-body">
    <div class="row">
      <div class="col-xs-2">
        <%= link_to 'Nuevo Empleado', new_empleado_path(@empleado), {:class=>"btn btn-primary", style:"color:white"}%>
      </div>
    </div>
    <br>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Direccion</th>
          <th>Telefono</th>
          <th>Email</th>
          <th>Ruc</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @empleados.each do |empleado| %>
          <tr>
            <td><%= empleado.nombre %></td>
            <td><%= empleado.direccion %></td>
            <td><%= empleado.telefono %></td>
            <td><%= empleado.email %></td>
            <td><%= empleado.ruc %></td>
            <td><%= link_to '', empleado, class: 'btn btn-primary btn-sm glyphicon glyphicon-eye-open', style:"color:white", title: 'Ver' %>
            <%= link_to '', edit_empleado_path(empleado), class: 'btn btn-default btn-sm glyphicon glyphicon-pencil', title: 'Editar', style: 'color: black;' %>
            <%= link_to '', empleado, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm glyphicon glyphicon-trash', style:"color:black", title: 'Eliminar' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>



