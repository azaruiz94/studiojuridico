<div class="box box-primary">
  <div class="box-header with-border">
    <h1 align="center">Ver Empleado</h1>

  </div>

  <div class="box-body">

    <p>
      <strong>Nombre:</strong>
      <%= @empleado.nombre %>
    </p>

    <p>
      <strong>Dirección:</strong>
      <%= @empleado.direccion %>
    </p>

    <p>
      <strong>Teléfono:</strong>
      <%= @empleado.telefono %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @empleado.email %>
    </p>

    <p>
      <strong>Ruc:</strong>
      <%= @empleado.ruc %>
    </p>

    <div class="col-xs-12 modal-footer" > 
      <%= link_to "Atras", empleados_path, class: "btn btn-default", style:"color:black" %>
      <%= link_to "Editar",  edit_empleado_path(@empleado), class: "btn btn-primary", id: "guardar", style:"color:white" %>
    </div>
  </div>
</div>
