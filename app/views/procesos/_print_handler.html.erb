<div class="modal fade" id="show-modal">
  
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="col-md-12">
        <button type="button" class="close no-print" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-header">
        <div id="report_info"> 
          <div class="row">
          <div class="col-md-12">
            <div class="col-md-2">
              <p align="left">Rige S.A</p>
            </div>
            <div class="col-md-10">
              <p align="right">Fecha de impresi처n: <%= Time.now.strftime("%d/%m/%Y %T")%></p>
            </div>  
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
              <p align="right">Impreso por: <%= current_usuario.nombre%></p>
            </div>
          </div>
        </div>
        </div>
        
        <h4 class="modal-title">Proceso con N째 de Nota: <%= @proceso.doc_numero%></h4>
      </div>
      
      <div style="word-wrap: break-word;" class="modal-body"> 
        <p id="notice"><%= notice %></p>

        <div class="col-md-12">
          <p>
            <strong>Referencia:</strong>
            <%= @proceso.referencia %>
          </p>
          <p>
            <strong>Estado:</strong>
            <%= @proceso.estado.nombre %>
          </p>
        </div>
          
        <div class="col-md-12">
          <p>
            <strong>Instituci처n:</strong>
            <%= @proceso.institucion.nombre %>
          </p>
          <p>
            <strong>Fecha de ingreso:</strong>
            <%= @proceso.fecha_ingreso.strftime("%d/%m/%Y") %>
          </p>

        </div>

        <div class="col-md-12">
          <p>
            <strong>Cliente:</strong>
            <%= @proceso.cliente.nombre %>
          </p>
          <p>
            <strong>Encargado:</strong>
            <%= @proceso.empleado.nombre %>
          </p>
        </div>

        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Ubicaci처n</th>
              <th>Fecha de Entrada</th>
              <th>Fecha de Salida</th>
            </tr>
          </thead>
            <tbody>
              <% @detalles.each do |detalle| %>
                <tr>
                  <td><%= detalle.numero %></td>
                  <td><%= detalle.lugar %></td>
                  <td><%= detalle.fecha_entrada.strftime("%d/%m/%Y") if detalle.fecha_entrada%></td>
                  <td><%= detalle.fecha_salida.strftime("%d/%m/%Y") if  detalle.fecha_salida %></td>
                </tr>
              <% end -%>
            </tbody>
          </table>
      </div>
      <div class="modal-footer">
        <button class="btn btn-default no-print" data-dismiss="modal" aria-hidden="true">Cerrar</button>
        <%= link_to "Imprimir", '#', class: "btn btn-success no-print", onclick: 'hideTable(); window.print(); return false; showReportInfo()', style:"color:white", id: "imprimir"%>
      </div>    
    </div>
  </div>
</div>