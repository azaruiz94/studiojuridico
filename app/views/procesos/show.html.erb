<div class="box box-primary">
  <div class="box-header with-border">
    <h1 align="center">Mostrando Proceso</h1>

  </div>

  <div class="box-body">
    <div class="col-xs-4">
      <p>
        <strong>Doc numero:</strong>
        <%= @proceso.doc_numero %>
      </p>
      <p>
        <strong>Referencia:</strong>
        <%= @proceso.referencia %>
      </p>
      <p>
        <strong>Estado:</strong>
        <%= @proceso.estado.nombre %>
      </p>
    </div>
    
    <div class="col-xs-4">
       <p>
        <strong>Descripcion:</strong>
        <%= @proceso.descripcion %>
      </p>
      <p>
        <strong>Fecha ingreso:</strong>
        <%= @proceso.fecha_ingreso %>
      </p>
      <p>
        <strong>Fecha salida:</strong>
        <%= @proceso.fecha_salida %>
      </p>
      
    </div>

    <div class="col-xs-4">
      <p>
        <strong>Cliente:</strong>
        <%= @proceso.cliente.nombre %>
      </p>
      <p>
        <strong>Encargado:</strong>
        <%= @proceso.empleado.nombre %>
      </p>
      
    </div>
    <br>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Ubicaci√≥n</th>
          <th>Fecha de Entrada</th>
          <th>Fecha de Salida</th>
        </tr>
      </thead>
        <tbody>
          <% @detalles.each do |detalle| %>
            <tr>
              <td><%= detalle.numero %></td>
              <td><%= detalle.lugar %></td>
              <td><%= detalle.fecha_entrada.strftime("%d/%m/%Y") if detalle.fecha_entrada%></td>
              <td><%= detalle.fecha_salida.strftime("%d/%m/%Y") if  detalle.fecha_salida %></td>
            </tr>
          <% end -%>
        </tbody>
      </table>
    <div class="col-xs-12 modal-footer" > 
          <%= link_to "Atras", procesos_path, class: "btn btn-default", style:"color:black" %>
          <%= link_to "Editar",  edit_proceso_path(@proceso), class: "btn btn-primary", id: "guardar", style:"color:white" %>
      </div>
  </div>
</div>
