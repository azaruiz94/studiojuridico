<%= form_for(cliente, validate: true) do |f| %>
  <% if cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

      <ul>
      <% cliente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="box-body">
    <div class="row">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-6">
            <div class="field">
              <%= f.label :nombre %>
              <%= f.text_field :nombre, class: "form-control"%>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="field">
              <%= f.label :direccion %>
              <%= f.text_field :direccion, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>

      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-6">
            <div class="field">
              <%= f.label :telefono %>
              <%= f.number_field :telefono, class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="field">
              <%= f.label :email %>
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-6">
            <div class="field">
              <%= f.label :ruc  %>
              <%= f.text_field :ruc, class: "form-control" %>
            </div>
          </div>
          <div class="col-xs-6">
            <div class="field">
              <%= f.label :tipo_cliente_id %>
              <%= f.select :tipo_cliente_id, options_for_select(@tipos_clientes.collect { |r| [r.nombre, r.id ]}, @tipo_cliente), {prompt: 'Seleccione el tipo de cliente'}, class: "form-control"%>
            </div>
          </div>
        </div>
      </div>
      

      <div class="col-xs-12 modal-footer" > 
        <%= link_to "Cancelar", clientes_path, class: "btn btn-default", style:"color:black" %>
        <%= f.submit "Guardar", class: "btn btn-primary", id: "guardar" %>
      </div>
    </div>
    
    
  </div>
  
<% end %>
