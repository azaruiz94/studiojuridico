<div class="box box-primary">
  <div class="box-body">
    <div class="row">
      <div class="col-xs-2">
        <%= link_to 'Nuevo Cliente', new_cliente_path(@cliente), {:class=>"btn btn-primary", style:"color:white"}%>
      </div>
    </div>
    <br>
      <table id="clientes_table" class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th>Email</th>
            <th>Ruc</th>
          </tr>
        </thead>

        <tbody>
          <% @clientes.each do |cliente| %>
            <tr>
              <td><%= cliente.nombre %></td>
              <td><%= cliente.direccion %></td>
              <td><%= cliente.telefono %></td>
              <td><%= cliente.email %></td>
              <td><%= cliente.ruc %></td>
              <td align="center"><%= link_to '', cliente, class: 'btn btn-primary btn-sm glyphicon glyphicon-eye-open', style:"color:white", title: 'Ver'  %>
              <%= link_to '', edit_cliente_path(cliente), class: 'btn btn-default btn-sm glyphicon glyphicon-pencil', title: 'Editar', style: 'color: black;'  %>
              <%= link_to '', cliente, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-default btn-sm glyphicon glyphicon-trash', style:"color:black", title: 'Eliminar'  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
