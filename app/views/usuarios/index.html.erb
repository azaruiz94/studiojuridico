<div class="box box-primary">
  <div class="box-body">
    <div class="row">
      <div class="col-md-2">
        <%= link_to 'Nuevo Usuario', new_usuario_path(@usuario), {:class=>"btn btn-primary", style:"color:white"}%>
      </div>
    </div>
    <br>

    <table class="table table-bordered table-striped table-responsive">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @usuarios.each do |usuario| %>
          <tr>
            <td><%= usuario.nombre %></td>
            <td><%= link_to '', usuario, class: 'btn btn-primary btn-sm glyphicon glyphicon-eye-open', style:"color:white", title: 'Ver' %>
            <%= link_to '', edit_usuario_path(usuario), class: 'btn btn-default btn-sm glyphicon glyphicon-pencil', title: 'Editar', style: 'color: black' %>
            <%= link_to '', usuario, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm glyphicon glyphicon-trash', style:"color:black", title: 'Eliminar' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>