<div class="box box-primary">	
  <div class="box-header with-border">
	 <h1 align="center">Mostrar Usuario</h1>
  </div>
  <div class="box-body">
  	<p>
	  <strong>Nombre de usuario:</strong>
	  <%= @usuario.nombre %>
	</p>

	<p>
	  <strong>Email:</strong>
	  <%= @usuario.email %>
	</p>

	<p>
	  <strong>Rol:</strong>
	  <%= @usuario.rol.nombre %>
	</p>

	<% @usuario.rol.acciones.each do |r|%>
	<li style="list-style:none;"><%= r.nombre %></li>
	<% end -%>
  </div>

  <div class="col-xs-12 modal-footer" > 
      <%= link_to "Atras", usuarios_path, class: "btn btn-default", style:"color:black" %>
      <%= link_to "Editar",  edit_usuario_path(@usuario), class: "btn btn-primary", id: "guardar", style:"color:white" %>
  </div>
</div>
