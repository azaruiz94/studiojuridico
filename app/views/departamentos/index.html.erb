<div class="box box-primary">
  <div class="box-body">
    <div class="row">
      <div class="col-md-2">
        <%= link_to 'Nuevo Departamento', new_departamento_path(@departamento), {:class=>"btn btn-primary", style:"color:white"}%>
      </div>
    </div>
    <br>
    <table class="table table-bordered table-striped table-responsive table-hover" >
      <colgroup>
        <col style="width:80%">
        <col style="width:20%">
      </colgroup>
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @departamentos.each do |departamento| %>
          <tr>
            <td><%= departamento.nombre %></td>
            <td><%= link_to '', edit_departamento_path(departamento), class: 'btn btn-default btn-sm glyphicon glyphicon-pencil', title: 'Editar', style: 'color: black' %>
            <%= link_to '', departamento, method: :delete, data: { confirm: 'Are you sure?' },  class: 'btn btn-default btn-sm glyphicon glyphicon-trash', style:"color:black", title: 'Eliminar' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
