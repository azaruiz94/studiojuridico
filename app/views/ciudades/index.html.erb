<div class="box box-primary">
  <div class="box-body">
    <div class="row">
      <div class="col-md-2">
        <%= link_to 'Nueva Ciudad', new_ciudad_path(@ciudad), {:class=>"btn btn-primary", style:"color:white"}%>
      </div>
    </div>
    <br>
    <table class="table table-bordered table-striped table-responsive table-hover">
      <colgroup>
        <col style="width:40%">
        <col style="width:40%">
        <col style="width:20%">
      </colgroup>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Departamento</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @ciudades.each do |ciudad| %>
          <tr>
            <td><%= ciudad.nombre %></td>
            <td><%= ciudad.departamento.nombre if  ciudad.departamento_id%></td>
            <td align="center"><%= link_to '', edit_ciudad_path(ciudad), class: 'btn btn-default btn-sm glyphicon glyphicon-pencil', title: 'Editar', style: 'color: black' %>
            <%= link_to '', ciudad, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm glyphicon glyphicon-trash', style:"color:black", title: 'Eliminar' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
