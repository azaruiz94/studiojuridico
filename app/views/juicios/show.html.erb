<div class="box box-primary">
  <div class="box-header with-border">
    <h1 align="center">Mostrando Proceso</h1>

  </div>

  <div class="box-body">
    <div class="col-xs-6">
      <p>
        <strong>Cliente</strong>
        <%= @juicio.cliente.nombre %>
      </p>
      <p>
        <strong>Encargado</strong>
        <%= @juicio.empleado.nombre %>
      </p>
      
    </div>
    <div class="col-xs-6">
      <p>
        <strong>Circunscripción</strong>
        <%= @juicio.circunscripcion + "°" %>
      </p>
      <p>
        <strong>Número de exp.:</strong>
        <%= @juicio.exp_numero %>
      </p>
    </div>
    <div class="col-xs-6">
      <p>
        <strong>Carátula:</strong>
        <%= @juicio.caratula %>
      </p>
      <p>
        <strong>Fiscal a cargo:</strong>
        <%= @juicio.fiscal %>
      </p>
    </div>
    <div class="col-xs-6">
      <p>
        <strong>Proceso:</strong>
        <%= @juicio.proceso %>
      </p>
      <p>
        <strong>Tipo de proceso:</strong>
        <%= @juicio.tipo_proceso %>
      </p>
    </div>
    <div class="col-xs-6">
      <p>
        <strong>Objeto del caso:</strong>
        <%= @juicio.objeto.nombre %>
      </p>

    </div>  
    <br>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Numero</th>
          <th>Fecha</th>
          <th>Descripcion</th>
          <th>Tipo</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @actuaciones.each do |actuacion| %>
          <tr>
            <td><%= actuacion.numero %></td>
            <td><%= actuacion.fecha %></td>
            <td><%= actuacion.descripcion %></td>
            <td><%= actuacion.tipo %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-xs-12 modal-footer" > 
          <%= link_to "Atras", juicios_path, class: "btn btn-default", style:"color:black" %>
          <%= link_to "Editar",  edit_juicio_path(@juicio), class: "btn btn-primary", id: "guardar", style:"color:white" %>
      </div>
  </div>
</div>
