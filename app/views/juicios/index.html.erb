<div class="box box-primary">
  <div class="box-body">
    <div class="row">
      <div class="col-md-2">
        <%= link_to 'Nuevo Proceso', new_juicio_path(@juicio), {:class=>"btn btn-primary", style:"color:white"}%>
      </div>
    </div>
    <br>
    <table class="table table-bordered table-striped table-responsive">
      <thead>
        <tr>
          <th>Exp numero</th>
          <th>Caratula</th>
          <th>Fiscal</th>
          <th>Proceso</th>
          <th>Tipo proceso</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @juicios.each do |juicio| %>
          <tr>
            <td><%= juicio.exp_numero %></td>
            <td><%= juicio.caratula %></td>
            <td><%= juicio.fiscal %></td>
            <td><%= juicio.proceso %></td>
            <td><%= juicio.tipo_proceso %></td>
            <% if can? :show, Juicio %>
              <td><%= link_to '', juicio , class: 'btn btn-primary btn-sm glyphicon glyphicon-eye-open', style:"color:white", title: 'Ver'%>
              <% end -%>
            <% if can? :edit, Juicio %>
              <%= link_to '', edit_juicio_path(juicio), class: 'btn btn-default btn-sm glyphicon glyphicon-pencil', title: 'Editar', style: 'color: black;' %>
            <% end -%>
            <% if can? :destroy, Juicio %>
              <%= link_to '', juicio, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm glyphicon glyphicon-trash', style:"color:black", title: 'Eliminar' %></td>
            <% end -%>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
