<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="user.png" class="img-circle" alt="User Image" />
      </div>
      <div class="pull-left info">
        <p><%= current_usuario.empleado.nombre %></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> En l√≠nea</a>
      </div>
    </div>
    <!-- Sidebar Menu -->
    <ul class="sidebar-menu">
      <li class="header">ENLACES</li>
        <!-- Optionally, you can add icons to the links -->
      <li class="treeview">
        <a href="/"><i class='glyphicon glyphicon-home'></i><span>Inicio</span></a>
      </li>
      <%if can? :show, Proceso or can? :show, Juicio%>
        <li class="treeview">
          <a href="#"><i class='glyphicon glyphicon-folder-open'></i> <span>Procesos</span> <i class="fa fa-angle-left pull-right"></i></a>
          <ul class="treeview-menu">
            <% if can? :show, Proceso, ProcesoDetalle %>
              <li><a href="/procesos">Contensioso Adm.</a></li>
            <% end -%>
            <% if can? :show, Juicio, Actuacion %>
              <li><a href="/juicios">Civil-Laboral</a></li>
            <% end -%>
          </ul>
        </li>
      <% end -%>
      <%if can? :show, Cliente or can? :show, Empleado%>
        <li class="treeview">
          <a href="#"><i class='fa fa-users'></i> <span>Personas</span> <i class="fa fa-angle-left pull-right"></i></a>
          <ul class="treeview-menu">
            <% if can? :show, Cliente %>
              <li><a href="/clientes">Clientes</a></li>
            <% end -%>
            <% if can? :show, Empleado %>
              <li><a href="/empleados">Empleados</a></li>
            <% end -%>
          </ul>
        </li>
      <% end -%>

      <%if can? :show, Usuario or can? :show, Rol%>
        <li class="treeview">
          <a href="#"><i class='fa fa-gears'></i> <span>Sistema</span> <i class="fa fa-angle-left pull-right"></i></a>
          <ul class="treeview-menu">
            <% if can? :show, Usuario %>
              <li><a href="/usuarios">Usuarios</a></li>
            <% end -%>
            <% if can? :show, Rol %>
              <li><a href="/roles">Roles</a></li>
            <% end -%>
          </ul>
        </li>
      <% end -%>

      <%if can? :show, Ciudad or can? :show, Departamento or can? :show, Ciudad or can? :show, Objeto%>
        <li class="treeview">
          <a href="#"><i class='fa fa-database'></i> <span>Registros</span> <i class="fa fa-angle-left pull-right"></i></a>
          <ul class="treeview-menu">
            <% if can? :show, Ciudad %>
              <li><a href="/ciudades">Ciudades</a></li>
            <% end -%>
            <% if can? :show, Departamento %>
              <li><a href="/departamentos">Departamentos</a></li>
            <% end -%>
            <% if can? :show, Institucion %>
              <li><a href="/instituciones">Instituciones</a></li>
            <% end -%>
            <% if can? :show, Objeto %>
              <li><a href="/objetos">Objeto de casos</a></li>
            <% end -%>
          </ul>
        </li>
      <% end -%>

      <li class="treeview">
        <a href="#"><i class='fa fa-newspaper-o'></i> <span>Reportes</span> <i class="fa fa-angle-left pull-right"></i></a>
        <ul class="treeview-menu">
            <li><%= link_to "Contensioso", report_procesos_path %></li> 
            <li><%= link_to "Civil-laboral", report_juicios_path%></li>>
        </ul>
      </li>
    </ul><!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>
