<!-- Main Header -->
<header class="main-header">

  <!-- Logo -->
  <a href="/" class="logo">
    <!-- mini logo for sidebar mini 50x50 pixels -->
    <span class="logo-mini"><b>R</b>SA</span>
    <!-- logo for regular state and mobile devices -->
    <span class="logo-lg"><b>Rige </b>S.A</span>
  </a>

  <!-- Header Navbar -->
  <nav class="navbar navbar-static-top" role="navigation">
    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
          
        <!-- User Account Menu -->
        <li class="dropdown user user-menu">
          <!-- Menu Toggle Button -->
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <!-- The user image in the navbar-->
            <img src="/assets/user2-160x160.jpg" class="user-image" alt="User Image"/>
            <!-- hidden-xs hides the username on small devices so only the image appears. -->
            <span class="hidden-xs"><%= current_usuario.nombre %></span>
          </a>
          <ul class="dropdown-menu">
            <!-- The user image in the menu -->
            <li class="user-header">
              <img src="/assets/user2-160x160.jpg" class="img-circle" alt="User Image" />
              <p>
                <span class="hidden-xs"><%= current_usuario.empleado.nombre %></span>
                <br>
                <span class="hidden-xs"><%= current_usuario.rol.nombre %></span>
              </p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to('Perfil', empleado_path(current_usuario), class: :"btn btn-default btn-flat") %> 
              </div>
              <div class="pull-right">
                <%= link_to('Salir', destroy_usuario_session_path, method: :delete, class: :"btn btn-default btn-flat") %> 
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>
