<div class="box box-primary">
  <div class="box-body">
    <div class="row">
      <div class="col-md-2">
        <%= link_to 'Nueva Institucion', new_institucion_path(@institucion), {:class=>"btn btn-primary", style:"color:white"}%>
      </div>
    </div>
    <br>
    <table id="instituciones_table" class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Direccion</th>
          <th>Telefono</th>
          <th>Email</th>
          <th>Ruc</th>
          <th>Autoridad</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @instituciones.each do |institucion| %>
          <tr>
            <td><%= institucion.nombre %></td>
            <td><%= institucion.direccion %></td>
            <td><%= institucion.telefonoA%></td>
            <td><%= institucion.email %></td>
            <td><%= institucion.ruc %></td>
            <td><%= institucion.autoridad %></td>
            <td><%= link_to '', edit_institucion_path(institucion), class: 'btn btn-default btn-sm glyphicon glyphicon-pencil', title: 'Editar', style: 'color: black;' %>
            <%= link_to '', institucion, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm glyphicon glyphicon-trash', style:"color:black", title: 'Eliminar' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
