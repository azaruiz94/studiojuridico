<%= form_for(institucion, validate:true) do |f| %>
  <% if institucion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(institucion.errors.count, "error") %> prohibited this institucion from being saved:</h2>

      <ul>
      <% institucion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="box-body">
    <div class="row">
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-6">
            <%= f.label :nombre%>
            <%= f.text_field :nombre, class: "form-control" %>
          </div>

          <div class="col-xs-6">
            <%= f.label :direccion %>
            <%= f.text_field :direccion, class: "form-control" %>
          </div>
        </div>  
      </div>

      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-4">
            <%= f.label :telefonoA, "Telefono 1" %>
            <%= f.number_field :telefonoA, class: "form-control" %>
          </div>

          <div class="col-xs-4">
            <%= f.label :telefonoB, "Telefono 2" %>
            <%= f.number_field :telefonoB, class: "form-control" %>
          </div>

          <div class="col-xs-4">
            <%= f.label :email %>
            <%= f.text_field :email, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-4">
            <%= f.label :ruc, "Ruc" %>
            <%= f.text_field :ruc, class: "form-control" %>
          </div>

          <div class="col-xs-4">
            <%= f.label :autoridad %>
            <%= f.text_field :autoridad, class: "form-control" %>
          </div>

          <div class="col-xs-4">
            <%= f.label :ciudad_id %>
            <%= f.select :ciudad_id, options_for_select(@ciudades.collect { |r| [r.nombre, r.id ]}, @ciudad), {prompt: 'Seleccione la ciudad'}, class: "js-ciudad-placeholder-single form-control"%>
          </div>
        </div>
      </div>
      
    </div>
    <div class="col-xs-12 modal-footer" >
      <%= link_to "Cancelar", instituciones_path, class: "btn btn-default", style:"color:black" %>
      <%= f.submit "Guardar", class: "btn btn-primary", id: "guardar" %>
    </div> 
  </div>
  

  
<% end %>
